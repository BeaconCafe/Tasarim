<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical"
    android:gravity="center"
    android:textColor="#FFFFFF"
    tools:context="com.tasarim.tasarim.MusteriSayfasi">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/mustereisayfasilogo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hosgeldiniz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giriş Sayınız"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/girisSayisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutüst"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/tv"
            android:layout_alignLeft="@+id/tv"
            android:layout_alignStart="@+id/tv"
            android:layout_marginBottom="15dp"
            android:src="@drawable/aaa" />

        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/pb"
            android:layout_marginLeft="26dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            custom:arc_progress="0"
            custom:arc_suffix_text=" "
            app:arc_stroke_width="8dp"
            custom:arc_text_size="0dp"
            android:layout_marginTop="10dp"
            custom:arc_unfinished_color="#ffffff"
            custom:arc_finished_color="@color/colorAccent"

            />
        <TextView
            android:id="@+id/tv"
            android:layout_marginLeft="55dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#FFFFFF"
            android:layout_below="@id/pb"
            android:gravity="center"
            android:textAlignment="gravity"
            />

    </RelativeLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:text="HEDİYELER"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İkram İçeceğiniz"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="#BCAAA4"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/ikramSayisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adet"
                android:textColor="#BCAAA4"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:layout_gravity="center"
        android:layout_alignStart="@+id/layoutüst"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        >


        <Button
            android:layout_width="145dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:background="@drawable/ripple"
            android:textColor="#FFFFFF"
            android:layout_marginRight="5dp"
            android:backgroundTint="#BCAAA4"
            android:onClick="MenüGöster"
            android:text="menü" />

        <Button
            android:id="@+id/kampanyalar"
            android:layout_width="145dp"
            android:layout_height="90dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ripple"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:text="Kampanyalarım"
            android:textColor="#FFFFFF"  />

    </LinearLayout>



</LinearLayout>
