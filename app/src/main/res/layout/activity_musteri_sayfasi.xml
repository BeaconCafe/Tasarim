<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan1"
    android:orientation="vertical"
    android:textColor="#7E57C2"
    tools:context="com.tasarim.tasarim.MusteriSayfasi">


    <TextView
        android:id="@+id/hosgeldiniz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"

        android:textColor="#7E57C2"
         />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bu güne kadar "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/girisSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" kez geldiniz. "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutüst"

        android:orientation="horizontal"
        android:layout_marginTop="10dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tv"
            android:layout_alignLeft="@+id/tv"
            android:layout_alignStart="@+id/tv"
            android:layout_marginBottom="15dp"
            android:src="@drawable/hediye" />
        <com.github.lzyzsd.circleprogress.ArcProgress
            android:id="@+id/pb"
            android:layout_marginLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            custom:arc_progress="0"
            custom:arc_suffix_text=" "
            app:arc_stroke_width="8dp"
            custom:arc_text_size="0dp"
            android:layout_marginTop="10dp"
            custom:arc_unfinished_color="#d7d9e0"
            custom:arc_finished_color="@color/colorPrimaryDark"

            />
        <TextView
            android:id="@+id/tv"
            android:layout_marginLeft="55dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#676a6b"
            android:layout_below="@id/pb"
            android:gravity="center"
            android:textAlignment="gravity"
            />

    </RelativeLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:lineSpacingExtra="8sp"
                android:text="HEDİYELER"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İkram İçeceğiniz"
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/ikramSayisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="34sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adet"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_gravity="center"

        android:layout_alignStart="@+id/layoutüst"
        android:layout_marginTop="50dp"

        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        >


        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/ripple"

            android:backgroundTint="#BCAAA4"
            android:onClick="MenüGöster"
            android:text="menü" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
android:layout_marginTop="20dp"
            android:background="@drawable/ripple"

            android:backgroundTint="@color/colorAccent"
            android:text="Kampanyalarım" />

    </LinearLayout>



</LinearLayout>
